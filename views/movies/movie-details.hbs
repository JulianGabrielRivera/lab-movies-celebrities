<h2>Movie Details:</h2>

<h3>{{theMovie.title}}</h3>
<p>{{theMovie.genre}}</p>
<p>{{theMovie.plot}}</p>

{{#each theMovie.cast}}

  <h3>{{name}}</h3>
  <p>{{occupation}}</p>
  {{!-- <p>{{cast.0.occupation}}</p> --}}
{{/each}}
<div>
  <a href='/movies/{{_id}}/edit'>EDIT THIS MOVIE</a>
</div>
<form action='/movies/{{theMovie._id}}/delete' method='POST'>
  <button type='submit'>DELETE</button>
</form>

